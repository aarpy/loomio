- utm_hash = @utm_hash.merge utm_campaign: 'vote'

= link_to t(:"position_verbs.yes").capitalize,
          clean_url(new_motion_vote_url( @motion, utm_hash.merge(position: 'yes'))),
          class: 'yes-link'
= " - "
= link_to t(:"position_verbs.abstain").capitalize,
          clean_url(new_motion_vote_url( @motion, utm_hash.merge(position: 'abstain'))),
          class: 'abstain-link'
= " - "
= link_to t(:"position_verbs.no").capitalize,
          clean_url(new_motion_vote_url( @motion, utm_hash.merge(position: 'no'))),
          class: 'no-link'
= " - "
= link_to t(:"position_verbs.block").capitalize,
